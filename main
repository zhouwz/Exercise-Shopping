<html>
  <head>
    <title>购物车</title>
    <meta charset="utf-8" />
    <style type="text/css">
      h1 {
        text-align:center;
      }
      table {
        margin:0 auto;
        width:60%;
        border:2px solid #aaa;
        border-collapse:collapse;
      }
      table th, table td {
        border:2px solid #aaa;
        padding:5px;
      }
      th {
        background-color:#eee;
      }
    </style>
    <script type="text/javascript">
    $(function(){
    	$("input[value='加入购物车']").click(function(){
    		var name = $(this).parent().siblings().eq(0).html();
    		var price = $(this).parent().siblings().eq(1).html();
    		var tr = 
    		'<tr>'
    		+'<td>'+name+'</td>'
    		+'<td>'+price+'</td>'
    		+'<td style="text-align:center">'
    		+'<input type="button" value="-" onclick="f1(this)"> '
    		+'<input style="text-align:center" readonly type="text" size="1" value="1">	'
    		+'<input type="button" value="+" onclick="f2(this)">'		
    		+'</td>	'
    		+'<td>'+price+'</td>'
    		+'<td><input type="button" value="X" onclick="f3(this)">'	
    		+'</td>'
    		+'</tr>';
    		$("#goods").append(tr); 
    		f4();
    	});
    })
    	function f2(btn){
    		var num = $(btn).prev().val();
    		var n = $(btn).prev().val(++num).val();
    		var price = $(btn).parent().siblings().eq(1).html();
    		$(btn).parent().next().html(n*price)
    		f4();
    	};
    	function f1(btn){
    		var num = $(btn).next().val();
    		var price = $(btn).parent().prev().html();
    		if(num<2){
    			f3(btn);
    		}else{
    		var n = $(btn).next().val(--num).val();
    		$(btn).parent().next().html(n*price);
    		f4();
    		}
    		
    	}
    	function f3(btn){
    		$(btn).parent().parent().remove();
    		f4();
    	}
    	function f4(){
    		var sum =0 ;
    		for(var i=0;i<$("#goods").children().length;i++){
    			var every_price = $("#goods").children().eq(i).children().eq(3).html();
    			sum += every_price*1;
    			$("#total").html(sum);
    			console.log(sum);
    				
    			}
    	}
	}
    </script>
